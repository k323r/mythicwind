@article{gaunaaEngineeringModelAerodynamic2016,
  title = {Toward an {{Engineering Model}} for the {{Aerodynamic Forces Acting}} on {{Wind Turbine Blades}} in {{Quasisteady Standstill}} and {{Blade Installation Situations}}},
  author = {Gaunaa, Mac and Heinz, Joachim and Skrzypi{\'n}ski, Witold},
