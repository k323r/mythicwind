  annotation = {WOS:000445440300076},
  file = {files/6424/2018_Jiang et al_A parametric study on the final blade installation process for monopile wind.pdf;files/6541/2018_Jiang et al_A parametric study on the final blade installation process for monopile wind.pdf;files/6542/2018_Jiang et al_A parametric study on the final blade installation process for monopile wind.pdf;files/6653/S0141029617328456.html},
