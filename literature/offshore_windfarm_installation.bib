
@article{aceroNumericalStudyNovel2017,
  title = {Numerical {{Study}} of a {{Novel Procedure}} for {{Installing}} the {{Tower}} and {{Rotor Nacelle Assembly}} of {{Offshore Wind Turbines Based}} on the {{Inverted Pendulum Principle}}},
